<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Midnight Poems</title>

  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <!-- Fundo animado -->
  <div class="bg-video" aria-hidden="true">
    <video autoplay loop muted playsinline>
      <source src="/videos/night-sky.mp4" type="video/mp4">
    </video>
  </div>

  <!-- Título principal -->
  <header class="hero">
    <h1>MIDNIGHT POEMS</h1>
    <p>poemas guiados pelas estrelas</p>
  </header>

  <!-- Grid de constelações -->
  <main id="grid" class="grid">
    <% lista.forEach(c => { %>
      <div class="card"
           data-id="<%= c._id %>"
           data-nome="<%= c.nome %>"
           data-imagem="<%= c.imagem %>"
           data-forma="<%= c.formaImg %>"
           data-historia="<%= c.historia %>"
           data-epoca="<%= c.epocaVisivel %>">

        <div class="card-media">
          <!-- camada de fundo (coloque alt vazio para não mostrar texto) -->
          <img class="layer-bg" src="<%= c.background %>" alt="">
          <!-- camada das estrelas (preferencialmente PNG com transparência) -->
          <img class="layer-stars" src="<%= c.imagem %>" alt="">
        </div>

        <h2 class="card-title"><%= c.nome %></h2>
      </div>
    <% }) %>
  </main>

  <!-- Overlay / detalhe 3D -->
  <div id="overlay" class="overlay" aria-hidden="true"></div>

  <script src="/js/main.js"></script>
</body>

</html>
