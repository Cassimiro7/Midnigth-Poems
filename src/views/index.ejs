<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Midnight Poems</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700;900&family=Cormorant+Garamond:wght@300;400;600&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Fundo único: camadas fixas -->
  <div class="sky" aria-hidden="true">
    <img class="bg-base" src="/assets/Background/background.png" alt="">
    <img class="bg-cosmo" src="/assets/Background/cosmo.png" alt="">
    <img class="bg-stars" src="/assets/Background/stars.png" alt="">
    <canvas id="starfield" aria-hidden="true"></canvas>
  </div>

  <header class="hero" role="banner">
    <div class="hero-inner">
      <h1 class="title">MIDNIGHT POEMS</h1>
      <p class="subtitle">Um site sobre as poesias mais bonitas que existem: as estrelas.</p>
    </div>
  </header>

  <!-- Container onde as constelações serão colocadas via JS -->
  <main id="sky-container" class="sky-container" role="main" aria-label="Mapa celeste">
    <% lista.forEach((c, i) => { %>
      <button
        class="constellation"
        data-id="<%= c._id %>"
        data-nome="<%= c.nome %>"
        data-imagem="<%= encodeURI(c.imagem) %>"
        data-forma="<%= encodeURI(c.formaImg) %>"
        data-historia="<%= c.historia %>"
        data-epoca="<%= c.epocaVisivel %>"
        aria-label="Abrir <%= c.nome %>">

        <!-- ROTATOR: recebe apenas ROTATION (persistente) -->
        <div class="constel-rotator" aria-hidden="true">
          <!-- FLOAT: recebe apenas animação de flutuação (CSS) -->
          <div class="constel-float" aria-hidden="true">
            <!-- PARALLAX: recebe traduções do mouse (JS) -->
            <div class="constel-parallax" aria-hidden="true">
              <!-- MEDIA: imagens (stars + lines) -->
              <div class="constel-media" aria-hidden="true">
                <img class="layer-stars" src="<%= encodeURI(c.imagem) %>" alt="">
                <img class="layer-lines" src="<%= encodeURI(c.formaImg) %>" alt="">
              </div>
            </div>
          </div>
        </div>

      </button>
    <% }) %>
  </main>

  <div id="overlay" class="overlay" aria-hidden="true"></div>

  <!-- scripts -->
  <script src="/js/stars.js"></script> <!-- seu starfield -->
  <script src="/js/main.js"></script>
</body>
</html>
